<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/post_CardView"
    android:layout_width="match_parent"
    android:layout_height="270dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:background="#FFFFFF"
    app:cardCornerRadius="17dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="2dp"
    app:cardPreventCornerOverlap="true"
    app:cardElevation="2dp">

    <ImageView
        android:id="@+id/image_Post_CardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:alpha="0.9"
        />

    <TextView
        android:id="@+id/post_titleCardView"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="170dp"
        android:text="Egg Benedict Surplus"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="230dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/post_manyTimes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.8"
            android:inputType="number"
            android:text="20"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_timesCook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:alpha="0.8"
            android:text="cooked this"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="260dp"
        android:layout_marginTop="220dp">
    <ImageView
        android:id="@+id/like_post"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_baseline_favorite_border_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textSize="10dp"
            android:textColor="#ffffff"
            android:textStyle="bold"

            android:layout_gravity="center"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/save_post"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="295dp"
        android:layout_marginTop="220dp"
        android:src="@drawable/ic_baseline_turned_in_not_24" />


</androidx.cardview.widget.CardView>



