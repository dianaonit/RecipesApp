<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".PostActivity">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e1ded0">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#e1ded0">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/close"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/cancel" />

                <TextView
                    android:id="@+id/textview_title_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@id/close"
                    android:text="New Post"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />


                <ImageView
                    android:id="@+id/post"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/checked" />

            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:id="@+id/image_added"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                android:src="@drawable/ic_baseline_add_a_photo_24"
                android:layout_marginTop="10dp" />


            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:drawableEnd="@drawable/ic_baseline_title_24"
                android:hint="Title"
                android:inputType="text"
                android:textColor="#aaa480"
                app:met_floatingLabel="normal"
                app:met_maxCharacters="25" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:drawableEnd="@drawable/ic_baseline_description_24"
                android:hint="Description"
                android:inputType="text"
                android:textColor="#aaa480"
                app:met_floatingLabel="normal"
                app:met_maxCharacters="40" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/servings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:hint="Servings"
                android:inputType="number"
                android:textColor="#aaa480"
                app:met_floatingLabel="normal"
                app:met_maxCharacters="2" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/prepTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:drawableEnd="@drawable/ic_baseline_access_time_filled_24"
                android:hint="Preparation time(in minute)"
                android:inputType="number"
                android:textColor="#aaa480"
                app:met_floatingLabel="normal"
                app:met_maxCharacters="3" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/cookTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:drawableEnd="@drawable/ic_baseline_access_time_filled_24"
                android:hint="Cook time(in minute)"
                android:inputType="number"
                android:textColor="#aaa480"
                app:met_floatingLabel="normal"
                app:met_maxCharacters="3" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/ingredients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:drawableEnd="@drawable/ic_baseline_add_shopping_cart_24"
                android:hint="Ingredients"
                android:inputType="text|textMultiLine"
                android:textColor="#aaa480"
                app:met_floatingLabel="normal" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/directions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:drawableEnd="@drawable/ic_baseline_live_help_24"
                android:hint="Directions"
                android:inputType="text|textMultiLine"
                android:textColor="#aaa480"
                app:met_floatingLabel="normal" />


        </LinearLayout>

    </ScrollView>


</LinearLayout>