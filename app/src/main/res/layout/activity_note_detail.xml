<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".NoteDetailActivity">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:isScrollContainer="true"
            android:background="#ffffff">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/btn_backfrom_detailnote"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/left_arrow_button" />
                <TextView
                    android:id="@+id/note"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Note:"
                    android:textColor="@color/black"
                    android:layout_toEndOf="@id/btn_backfrom_detailnote"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="25dp"
                    />
                <TextView
                    android:id="@+id/note_detail_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chocolate Cake"
                    android:textColor="@color/black"
                    android:layout_toEndOf="@id/note"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:textStyle="bold"
                    android:textSize="17sp" />

                <ImageView
                    android:id="@+id/edit_note"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:src="@drawable/edit_note"
                    android:layout_marginEnd="15dp"
                    android:alpha="0.5"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Note description:"
            android:textColor="@color/black"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp" />
        <TextView
            android:id="@+id/note_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Desert"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/details_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
       android:gravity="center"
        android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/linearlayout_servings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_servings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.5"
            android:text="Servings"
            android:textSize="15sp"
            android:textColor="#000000"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/note_nrOfservings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="20sp"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pp_nrOfservings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" pp"
                android:textSize="20sp"
                android:textColor="#000000"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_preptime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.5"
            android:text="Prep Time"
            android:textSize="15sp"
            android:textColor="#000000"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/note_timeOfprep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25"
                android:textSize="20sp"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/m_timeOfprep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" m"
                android:textSize="20sp"
                android:textColor="#000000"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"

        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_cookTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.5"
            android:text="Cook Time"
            android:textSize="15sp"
            android:textColor="#000000"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/note_timeOfcook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="35"
                android:textSize="20sp"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/m_timeOfcook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" m"
                android:textSize="20sp"
                android:textColor="#000000"
                android:textStyle="bold" />

        </LinearLayout>
       </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:id="@+id/ingredient_directions_bar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="#f5f4f0"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <Button
                android:id="@+id/btn_ingredients_note"
                android:layout_height="35dp"
                android:layout_width="match_parent"
                android:text="Ingredients"
                android:textColor="#000000"
                android:alpha="0.6"
                android:textStyle="bold"
                style="@style/Widget.AppCompat.ButtonBar" />

            <View
                android:id="@+id/line_ingredients_note"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#000000"
                android:alpha="0.6"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <Button
                android:id="@+id/btn_directions_note"
                android:layout_height="35dp"
                android:layout_width="match_parent"
                android:text="Directions"
                android:textColor="#000000"
                android:alpha="0.6"
                android:textStyle="bold"
                style="@style/Widget.AppCompat.ButtonBar" />

            <View
                android:id="@+id/line_directions_note"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#000000"
                android:alpha="0.6"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:visibility="gone"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ingred_directions_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/ingredient_directions_bar"
        android:visibility="visible">

        <TextView
            android:id="@+id/note_ingredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textStyle="normal"
            android:textColor="#000000"
            android:text="" />

        <TextView
            android:id="@+id/note_directions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textStyle="normal"
            android:textColor="#000000"
            android:text=""
            android:visibility="gone"
            />

    </LinearLayout>




</LinearLayout>